{
  "name": "markdownforge",
  "version": "2.1.0",
  "description": "AI-powered Markdown to Word converter with intelligent templates and real-time preview",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "serve": "python3 -m http.server 8080",
    "serve:dev": "live-server --port=8080",
    "build": "npm run test && npm run test:e2e",
    "lint": "eslint js/*.js",
    "lint:fix": "eslint js/*.js --fix",
    "validate": "npm run lint && npm run test && npm run test:e2e"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Chauhan-Mukesh/Markdown_to_Word.git"
  },
  "keywords": [
    "markdown",
    "word",
    "converter",
    "docx",
    "html",
    "pdf",
    "editor",
    "real-time",
    "preview",
    "templates"
  ],
  "author": "Mukesh Chauhan",
  "license": "GPL-3.0",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "live-server": "^1.2.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": ["<rootDir>/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "js/*.js",
      "!js/*-fallback.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "showdown": "readonly",
      "SimpleMarkdownConverter": "readonly",
      "FileManager": "readonly",
      "EditorToolbar": "readonly",
      "DocumentTemplates": "readonly",
      "SearchReplace": "readonly",
      "PrintExport": "readonly",
      "showNotification": "readonly",
      "NotificationSystem": "readonly",
      "HtmlToWordConverter": "readonly",
      "ShowdownFallback": "readonly",
      "module": "writable"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "semi": ["error", "always"],
      "quotes": ["error", "single", { "avoidEscape": true }],
      "no-useless-escape": "warn",
      "no-prototype-builtins": "warn"
    }
  }
}